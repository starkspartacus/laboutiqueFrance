{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block content %}
<h1>Nos produits</h1>

    <div class="row container-fluid mb-5">
        {% for product in produits %}
            <div class="col-md-4">
                <div class="product-item text-center">
                    <a href="{{ path('product', {'slug': product.slug}) }}">

                    <img
                     src="/uploads/{{ product.illustration }}"
                     alt="{{ product.name }}"
                      class="img-fluid"
                    >
                    </a>
                    <h5 class="text-uppercase mb-1">{{ product.name }}</h5>
                    <span class="product-subtitle block">{{ product.subtitle }}</span>
                    <span class="product-price font-weight-bold display-5">
                        {{ (product.price / 100)|number_format(2, ',','.') }} â‚¬
                    </span>
                </div>

            </div>
        {% endfor %}
    </div>

{% endblock %}
